<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity"
    tools:deviceIds="wear"
    android:orientation="vertical"
    android:gravity="center"
    android:keepScreenOn="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="심박수 측정 중"
                android:gravity="center"
                android:textSize="15sp"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/startImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart_rate"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/startTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VRhythm\nHeart rate monitoring app"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/heartImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heart_rate"/>

            <ImageView
                android:id="@+id/unheartImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/broken_heart"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/heartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginLeft="10dp"
                android:textSize="45dp"/>

        </LinearLayout>

    </LinearLayout>
